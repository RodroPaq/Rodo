{
  "header": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header.full": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header-layout.desktop": {
    "children": [
      "header-row#1-desktop",      
      "header-row#2-desktop"
    ]
  },

  "header-row#1-desktop": {
    "children": [
      "logo#desktop",      
      "header-spacer",
      "header-spacer",
      "search-bar",
      "locale-switcher",
      "login",
      "minicart"
    ],
    "props": {      
      "blockClass": "main-header"
    }
  },
  "header-row#2-desktop": {
    "children": [      
      "vtex.menu@2.x:menu#category-menu"   
    ],
    "props": {      
      "blockClass": "main-header-menu"
    }
  },
  "logo#desktop": {
    "props": {
      "title": "Rodo",
      "href": "/",
      "url": "https://rodo.com.ar/skin/frontend/rodo/rodo/images/logo.png",
      "width": "195"
    }
  },

  "minicart": {
    "blocks": [
      "product-summary"
    ],
    "props": {
      "type": "popup",
      "showRemoveButton": true,
      "showDiscount": true,
      "showSku": true,
      "labelMiniCartEmpty": "",
      "labelButtonFinishShopping": "Go to checkout",
      "enableQuantitySelector": true,
      "maxQuantity": 10,
      "labelClasses": "gray"
    }
  },

  "header-layout.mobile": {
    "children": [
      "header-row#1-mobile"
    ]
  },
  "header-row#1-mobile": {
    "children": [
      "drawer",
      "logo#mobile",
      "header-spacer",
      "login",
      "minicart"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header-mobile"
    }
  },
  "drawer": {
    "children": [
      "menu#drawer"
    ]
  },

  "menu#drawer": {
    "children": [
      "menu-item#category-imagensonido"
    ],
    "props": {
      "orientation": "vertical"
    }
  },

  "logo#mobile": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://rodo.com.ar/skin/frontend/rodo/rodo/images/logo.png",
      "width": "70"
    }
  }
}